{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/app-config": ["./app-config/"],
      "@/app-config/*": ["./app-config/*"],
      "@/common": ["./common/"],
      "@/common/*": ["./common/*"],
      "@/orders": ["./orders"],
      "@/orders/*": ["./orders/*"]
    },
    "incremental": true
  },
  "includes": [
    "src"
  ]
}
